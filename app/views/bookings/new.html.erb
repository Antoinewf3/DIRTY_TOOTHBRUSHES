<style>
  @import url('https://fonts.googleapis.com/css2?family=Open+Sans&display=swap');
</style>
<div class="container">
 <div class="my-5">
    <div data-controller="dynamic-booking-price" data-dynamic-booking-price-price-value="<%= @booking%>">
      <%= simple_form_for [@toothbrush, @booking] do |f| %>
      <%= f.input :start_date, as: :string, input_html: { data: { controller: "datepicker" }} %>
      <%= f.input :end_date,  as: :string, input_html:  { data: { controller: "datepicker" }} %>
      <div class="position-absolute top-50 start-50 translate-middle">
      <%= f.submit "Book it" , class: 'btn btn-primary'%>
    </div>
  <% end %>
  </div>
</div>
