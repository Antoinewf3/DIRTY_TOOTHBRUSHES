<div class="container">
  <div class="my-5">
  <h1 class="fw-semibold title-blue">Add your Toothbrush</h1>
  <div style="width:100%;height:0;padding-bottom:100%;position:relative;"><iframe src="https://giphy.com/embed/qrG427cL1eCt2JbuuG" width="100%" height="100%" style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen></iframe></div><p><a href="https://giphy.com/stickers/cooneyorthodontics-transparent-qrG427cL1eCt2JbuuG"></a></p>
      <%= simple_form_for(@toothbrush) do |f| %>
        <%= f.input :title, input_html:{ class: 'input-text rounded-5', placeholder: "Title"} %>
        <%= f.input :category, collection: ['Electric', 'Standard'], include_blank: 'Select Category', input_html:{class: 'input-select rounded-5 bg-white'} %>
        <%= f.input :price, input_html: { step: 'any', class: 'input-text rounded-5', placeholder: 'Price (in â‚¬)' } %>
        <%= f.input :photo, as: :file, input_html: {class: 'input-photo rounded-5 bg-white'} %>
        <%= f.submit "Create", class: 'btn rainbow show-btn'%>
      <% end %>
  </div>
</div>
